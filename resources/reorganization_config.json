{
    "hierarchy_rules": [
        {
            "category": "Documents",
            "extensions": ["txt", "pdf", "docx", "doc", "rtf"]
        },
        {
            "category": "Images",
            "extensions": ["jpg", "jpeg", "png", "gif", "bmp", "tiff"]
        },
        {
            "category": "Spreadsheets",
            "extensions": ["xlsx", "xls", "csv"]
        },
        {
            "category": "Presentations",
            "extensions": ["pptx", "ppt", "key", "odp"]
        },
        {
            "category": "Code",
            "extensions": ["py", "js", "html", "css", "java", "cpp", "c", "rb"]
        },
        {
            "category": "Archives",
            "extensions": ["zip", "rar", "7z", "tar", "gz"]
        }
    ],
    "classification_weights": {
        "file_extension": 0.4,
        "file_size": 0.2,
        "creation_date": 0.2,
        "content_type": 0.2
    }
}
